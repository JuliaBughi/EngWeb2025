extends layout

block content
  .w3-card-4
    header.w3-container.w3-red
      h1= title
    .w3-container
      table.w3-table-all 
        tr
          th Ano
          th Título
          th Elenco
          th Géneros
          th Opções
        each filme in lfilmes
          tr
            td= filme.ano
            td= filme.titulo
            td
              ul.w3-ul 
                each ator in filme.atores
                  li 
                    a(href='/filmes/atores/' + ator) #{ator}
            td
              ul.w3-ul 
                each genre in filme.genero
                  li= genre
            td 
              p 
                a(href='/filmes/edit/' + filme.id) 
                  .w3-button.w3-black.w3-round-large Editar
              p 
                a(href='/filmes/delete/' + filme.id) 
                  .w3-button.w3-black.w3-round-large Eliminar


      
          